{
  "name": "g2/production-management",
  "version": "1.0.0",
  "license": "MIT",
  "type": "project",
  "scripts": {
    "dev:up": "docker compose -f docker-compose.dev.yml up -d --remove-orphans",
    "dev:down": "docker compose -f docker-compose.dev.yml down -v",
    "format": "./node_modules/.bin/prettier --check \"**/*.{css,js,php}\" --write --cache",
    "prod:up": "docker compose -f docker-compose.prod.yml up -d --remove-orphans",
    "prod:down": "docker compose -f docker-compose.prod.yml down -v",
    "test": "./vendor/bin/phpunit --display-warnings --display-deprecations"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Framework\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "nikic/fast-route": "^1.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.3"
  }
}
